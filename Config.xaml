<Window x:Class="PistachoStudiosLauncherWPF.Config"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PistachoStudiosLauncherWPF"
        mc:Ignorable="d"
        Title="Configuración Inicial" Height="92" Width="282" Loaded="Window_Loaded" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Label Content="Nombre de usuario" HorizontalAlignment="Left" Height="24" Margin="10,0,0,16" VerticalAlignment="Bottom" Width="114"/>
        <TextBox Grid.Row="0" x:Name="usernametb" HorizontalAlignment="Left" Height="18" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="149"/>
        <Button Grid.Row="0" Content="Guardar" HorizontalAlignment="Right" Height="36" Margin="0,0,10,0" VerticalAlignment="Bottom" Width="85" Click="Button_Click"/>

    </Grid>
</Window>
